extend type Query {
  """
  查询品牌列表
  """
  brandsConnection(
    """
    查询条件
    """
    where: BrandWhereInput = {}
    """
    当前页
    """
    page: Int = 1
    """
    每页显示条数
    """
    pageSize: Int = 15
    """
    排序
    """
    orderBy: OrderBy = "unsorted"
  ): BrandConnection!
  """
  查询品牌列表
  """
  brands(
    """
    查询条件
    """
    where: BrandWhereInput = {}
    """
    偏移量
    """
    offset: Int = 0
    """
    每页显示条数
    """
    limit: Int = 15
    """
    排序
    """
    orderBy: OrderBy = "unsorted"
  ): [Brand!]!
  """
  查询品牌详情
  """
  brand(
    """
    品牌ID
    """
    id: ID!
  ): Brand
  """
  查询产品列表
  """
  productsConnection(
    """
    查询条件
    """
    where: ProductWhereInput = {}
    """
    当前页
    """
    page: Int = 1
    """
    每页显示条数
    """
    pageSize: Int = 15
    """
    排序
    """
    orderBy: OrderBy = "unsorted"
  ): ProductConnection!
  """
  查询产品列表
  """
  products(
    """
    查询条件
    """
    where: ProductWhereInput = {}
    """
    偏移量
    """
    offset: Int = 0
    """
    每页显示条数
    """
    limit: Int = 15
    """
    排序
    """
    orderBy: OrderBy = "unsorted"
  ): [Product!]!
  """
  查询产品详情
  """
  product(
    """
    产品ID
    """
    id: ID!
    """
    产品ID类型
    """
    type: ProductIdType = ID
  ): Product
  """
  查询设备列表
  """
  devicesConnection(
    """
    查询条件
    """
    where: DeviceWhereInput = {}
    """
    当前页
    """
    page: Int = 1
    """
    每页显示条数
    """
    pageSize: Int = 15
    """
    排序
    """
    orderBy: OrderBy = "unsorted"
  ): DeviceConnection!
  """
  查询设备列表
  """
  devices(
    """
    查询条件
    """
    where: DeviceWhereInput = {}
    """
    偏移量
    """
    offset: Int = 0
    """
    每页显示条数
    """
    limit: Int = 15
    """
    排序
    """
    orderBy: OrderBy = "unsorted"
  ): [Device!]!
  """
  查询设备详情
  """
  device(id: ID!, idType: DeviceIdType = ID): Device
  """
  查询保修策略列表
  """
  warrantyPolicies(productId: ID!): [WarrantyPolicy!]!
}

input WarrantyPolicyWhereInput {
  id_in: [ID!]
  name_contains: String
}

extend type Mutation {
  """
  创建品牌
  """
  createBrand(
    """
    创建品牌信息
    """
    input: BrandCreateInput!
  ): Brand

  """
  "
  更新品牌
  """
  updateBrand(
    """
    品牌ID
    """
    id: ID!
    """
    更新品牌信息
    """
    input: BrandUpdateInput!
    """
    是否合并更新
    """
    merge: Boolean = true
  ): Brand
  """
  删除品牌
  """
  deleteBrand(id: ID!): Brand
  """
  批量删除品牌
  """
  deleteManyBrands(where: BrandWhereInput! = {}): BatchPayload!
  """
  创建产品
  """
  createProduct(
    """
    创建产品信息
    """
    input: ProductCreateInput!
  ): Product!
  """
  更新产品
  """
  updateProduct(
    """
    产品ID
    """
    id: ID!
    """
    更新产品信息
    """
    input: ProductUpdateInput!
    """
    是否合并更新
    """
    merge: Boolean = true
  ): Product!
  """
  删除产品
  """
  deleteProduct(id: ID!): Product
  """
  添加文章到产品
  """
  addArticlesToProduct(
    """
    产品ID
    """
    productId: ID!
    """
    关联类型
    """
    linkageType: String!
    """
    文章ID列表
    """
    articleIds: [ID!]!
  ): Product
  """
  从产品中移除文章
  """
  removeArticlesFromProduct(
    """
    产品ID
    """
    productId: ID!
    """
    关联类型
    """
    linkageType: String!
    """
    文章ID列表
    """
    articleIds: [ID!]!
  ): Product

  """
  创建设备
  """
  createDevice(
    """
    产品ID
    """
    input: DeviceCreateInput!
  ): Device!
  """
  更新设备
  """
  updateDevice(
    """
    设备ID
    """
    id: ID!
    """
    更新设备信息
    """
    input: DeviceUpdateInput!
    """
    是否合并更新
    """
    merge: Boolean = true
  ): Device!
  """
  删除设备
  """
  deleteDevice(id: ID!): Device
  """
  批量删除设备
  """
  deleteManyDevices(where: DeviceWhereInput! = {}): BatchPayload!
  """
  创建保修政策
  """
  createWarrantyPolicy(input: WarrantyPolicyCreateInput!): WarrantyPolicy
  """
  更新保修政策
  """
  updateWarrantyPolicy(
    """
    保修政策ID
    """
    id: ID!
    """
    更新保修政策信息
    """
    input: WarrantyPolicyUpdateInput!
    """
    是否合并更新
    """
    merge: Boolean = true
  ): WarrantyPolicy
  """
  删除保修政策
  """
  deleteWarrantyPolicy(id: ID!): WarrantyPolicy
  """
  批量删除保修政策
  """
  deleteManyWarrantyPolicies(
    where: WarrantyPolicyWhereInput! = {}
  ): BatchPayload!
}
