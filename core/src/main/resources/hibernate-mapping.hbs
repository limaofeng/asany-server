<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class entity-name="{{name}}" table="{{databaseTableName}}">
        {{~#idField}}
        <id name="{{name}}" type="{{javaType}}" length="64" unsaved-value="null">
            <generator class="fantasy-sequence"/>
        </id>
        {{~/idField}}
        {{~#each fields}}
        <property type="{{javaType}}" name="{{name}}" column="{{databaseColumnName}}"/>
        {{~/each}}
    </class>
</hibernate-mapping>