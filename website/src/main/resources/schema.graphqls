enum LandingPageStatus {
  """
  草稿
  """
  DRAFT
  """
  已发布
  """
  PUBLISHED
  """
  结束
  """
  COMPLETED
  """
  中止
  """
  SUSPEND
}

type LandingStore {
  id: ID!
  code: String!
  name: String!
  address: Address
  location: Geolocation
  qrCode: File
  leader: String
  createdAt: Date! @dateFormat
  description: String
}

type LandingPage {
  id: ID!
  name: String!
  description: String
  status: LandingPageStatus!
  start: Date @dateFormat
  end: Date @dateFormat
  poster: LandingPoster
  stores: [LandingStore!]!
  createdAt: Date! @dateFormat
  metadata: Metadata
}

type LandingPageConnection {
  # 总数据条数
  totalCount: Int!
  # 每页显示条数
  pageSize: Int!
  # 总页数
  totalPage: Int!
  # 当前页
  currentPage: Int!
  edges: [LandingPageEdge!]!
  pageInfo: PageInfo
}

type LandingPageEdge {
  cursor: String!
  node: LandingPage!
}

type LandingPosterConnection {
  # 总数据条数
  totalCount: Int!
  # 每页显示条数
  pageSize: Int!
  # 总页数
  totalPage: Int!
  # 当前页
  currentPage: Int!
  edges: [LandingPosterEdge!]!
  pageInfo: PageInfo
}

type LandingPosterEdge {
  cursor: String!
  node: LandingPoster!
}

type LandingStoreConnection {
  # 总数据条数
  totalCount: Int!
  # 每页显示条数
  pageSize: Int!
  # 总页数
  totalPage: Int!
  # 当前页
  currentPage: Int!
  edges: [LandingStoreEdge!]!
  pageInfo: PageInfo
}

type LandingStoreEdge {
  cursor: String
  node: LandingStore!
}

type LandingPoster {
  id: ID!
  """
  音乐
  """
  music: File
  """
  名称
  """
  name: String!
  """
  背景
  """
  background: File
  """
  描述
  """
  description: String
  createdAt: Date! @dateFormat
}

